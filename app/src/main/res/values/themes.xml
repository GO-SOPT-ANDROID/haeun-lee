<resources>
    <!-- Base application theme. -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryVariant">@color/light_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_500</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Neutral key color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Navigation Bar Container color -->
        <item name="colorSurface">@color/blue_gray_50</item>

        <!-- Navigation Bar Active Indicator color -->
        <item name="colorSurfaceVariant">@color/light_blue_100</item>

        <!-- Navigation Bar Icon/Text Active color -->
        <item name="colorOnSurface">@color/black</item>

        <!-- Navigation Bar Icon/Text Inactive color -->
        <item name="colorOnSurfaceVariant">@color/gray_800</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Font Theme -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.GOSOPTAndroid.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.GOSOPTAndroid.DisplayMedium</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.GOSOPTAndroid.HeadLineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.GOSOPTAndroid.HeadLineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.GOSOPTAndroid.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.GOSOPTAndroid.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.GOSOPTAndroid.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.GOSOPTAndroid.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.GOSOPTAndroid.LabelMedium</item>

        <!-- Text Field Theme -->
        <item name="textInputStyle">@style/Widget.GOSOPTAndroid.TextInputLayout</item>
    </style>

    <!-- Navigation Bar Active indicator style -->
    <style name="Widget.GOSOPTAndroid.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?colorSurfaceVariant</item>
    </style>

    <!-- Text Field Filled Box Theme -->
    <style name="Widget.GOSOPTAndroid.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.GOSOPTAndroid.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.GOSOPTAndroid.TextInputLayout" parent="">
        <item name="colorPrimary">@color/indigo_700</item>
        <item name="colorSurface">@color/gray_50</item>
        <item name="colorOnSurface">@color/indigo_700</item>
        <item name="colorError">@color/red</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.GOSOPTAndroid.HeadLineMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.GOSOPTAndroid.BodySmall</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>
</resources>