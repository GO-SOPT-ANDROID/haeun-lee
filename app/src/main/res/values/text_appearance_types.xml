<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Font Theme -->
    <style name="TextAppearance.GOSOPTAndroid" parent="">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.DisplayLarge">
        <item name="fontWeight">700</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.DisplayMedium">
        <item name="fontWeight">500</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.HeadLineLarge">
        <item name="fontWeight">700</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">25dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.HeadLineMedium">
        <item name="fontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodyLarge">
        <item name="fontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodyMedium">
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodySmall">
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.LabelLarge">
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.LabelMedium">
        <item name="fontWeight">400</item>
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">15dp</item>
    </style>
</resources>