<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.GOSOPTAndroid" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.DisplayLarge">
        <item name="android:fontFamily">@font/bold_font</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.DisplayMedium">
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.HeadLineLarge">
        <item name="android:fontFamily">@font/bold_font</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.HeadLineMedium">
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodyLarge">
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodyMedium">
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodySmall">
        <item name="android:fontFamily">@font/light_font</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.LabelLarge">
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.LabelMedium">
        <item name="android:fontFamily">@font/light_font</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>
</resources>